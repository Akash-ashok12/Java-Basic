import java.util.*;
public class Main {
    public static void main(String args[]) {
        Scanner sc = new Scanner(System.in);
        String mystr = sc.nextLine();
        int myin = sc.nextInt();
        System.out.print(mystr);
        System.out.println(" "+myin);
        for(int i=mystr.length()-1;i>=0;i--)
        {
            System.out.print(mystr.charAt(i));
        }
    } 
}
